<div class="container">
  <p>
    <strong>Description:</strong>
    <%= @citation.description %>
  </p>
 
  <p>
    <strong>Said/Written by:</strong>
    <%= @citation.name %>
  </p>

  <h2>Comments</h2>
  <% render @citation.comments %>

  <h2>Add a comment:</h2>
  <%= form_with(model: [ @citation, @citation.comments.build ], local: true) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
  <%= link_to 'Back', citations_path %>
</div>